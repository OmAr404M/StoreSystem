@model List< SoreSystem.Models.Items>
@{
    ViewData["Title"] = "Index";
}

<h1> Index</h1>
<h2>
@ViewBag.PageTitle
</h2>
<div>
   <table>
       <thead>
           <tr>
               <th>Item Id</th>
               <th>Item Name</th>
               <th>Sales Price</th>
               <th>Purchase Price</th>
           </tr>
       </thead>
       <tbody>
           @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ItemId</td>
                    <td>@item.ItemName</td>
                    <td>@item.PurchasePice</td>
                    <td>@item.SalesPrice</td>
                </tr>
            }
        </tbody>
   </table>
</div>